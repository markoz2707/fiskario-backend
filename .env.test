# Test Environment Configuration
NODE_ENV=test
EDEKLARACJE_TEST_ENV=true

# Database (test database)
DATABASE_URL="postgresql://test_username:test_password@localhost:5432/fiskario_test"

# JWT (test key)
JWT_SECRET="test-jwt-secret-key-for-development"

# e-Deklaracje (test environment)
EDEKLARACJE_SOAP_TIMEOUT=15000
EDEKLARACJE_SOAP_RETRIES=2
EDEKLARACJE_TEST_WSDL_URL="https://test-e-deklaracje.mf.gov.pl/ws/e-Deklaracje.wsdl"
EDEKLARACJE_PRODUCTION_WSDL_URL="https://e-deklaracje.mf.gov.pl/ws/e-Deklaracje.wsdl"
EDEKLARACJE_CERT_PATH="/etc/ssl/certs/test-e-deklaracje.crt"
EDEKLARACJE_KEY_PATH="/etc/ssl/private/test-e-deklaracje.key"
EDEKLARACJE_CERT_PASSPHRASE="test_passphrase"

# Profil Zaufany API (test)
PROFIL_ZAUFANY_API_URL="https://test-pz.gov.pl/api"
PROFIL_ZAUFANY_CLIENT_ID="test_client_id"
PROFIL_ZAUFANY_CLIENT_SECRET="test_client_secret"

# Monitoring (more frequent for testing)
EDEKLARACJE_STATUS_CHECK_INTERVAL=5
EDEKLARACJE_AUTO_CHECK=true
EDEKLARACJE_MAX_RETRIES=2
EDEKLARACJE_RETRY_DELAY=2000

# Logging
LOG_LEVEL=debug

# Security (test keys)
ENCRYPTION_KEY="test-32-character-encryption-key!"