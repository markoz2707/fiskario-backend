# Database
DATABASE_URL="postgresql://username:password@localhost:5432/fiskario"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"

# e-Deklaracje Configuration
EDEKLARACJE_TEST_ENV=true
EDEKLARACJE_SOAP_TIMEOUT=30000
EDEKLARACJE_SOAP_RETRIES=3
EDEKLARACJE_TEST_WSDL_URL="https://test-e-deklaracje.mf.gov.pl/ws/e-Deklaracje.wsdl"
EDEKLARACJE_PRODUCTION_WSDL_URL="https://e-deklaracje.mf.gov.pl/ws/e-Deklaracje.wsdl"
EDEKLARACJE_CERT_PATH="/etc/ssl/certs/e-deklaracje.crt"
EDEKLARACJE_KEY_PATH="/etc/ssl/private/e-deklaracje.key"
EDEKLARACJE_CERT_PASSPHRASE=""

# Profil Zaufany API
PROFIL_ZAUFANY_API_URL="https://pz.gov.pl/api"
PROFIL_ZAUFANY_CLIENT_ID=""
PROFIL_ZAUFANY_CLIENT_SECRET=""

# Monitoring
EDEKLARACJE_STATUS_CHECK_INTERVAL=15
EDEKLARACJE_AUTO_CHECK=true
EDEKLARACJE_MAX_RETRIES=3
EDEKLARACJE_RETRY_DELAY=5000

# Logging
LOG_LEVEL=info

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"